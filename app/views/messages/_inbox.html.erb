<div class="my-3 p-3 bg-white rounded shadow-sm">
  <div>
    <h6 class="border-bottom border-gray pb-2 mb-0"><%= user.first_name + ' ' + user.last_name %>'s Inbox (<%=unread[:sum]%>)</h6>
    <% messages.each do |message| %>
      <%= link_to message do %>
        <div class="media text-muted pt-3">
          <svg class="bd-placeholder-img mr-2 rounded" width="32" height="32" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: 32x32">
            <title>Placeholder</title>
            <rect width="100%" height="100%" fill="#007bff"></rect>
            <text x="50%" y="50%" fill="#007bff" dy=".3em">32x32</text>
          </svg>
          <p class="media-body pb-3 mb-0 small lh-125 border-bottom border-gray">
            <strong class="d-block text-gray-dark"><%= message.outbox.user.first_name %> <%= message.outbox.user.last_name %> (<%= unread[message.outbox.user.id].nil? ? 0 : unread[message.outbox.user.id] %>)</strong>
            <% if message.read == false %>
              <b>(Unread) <%= message.body.truncate(100) %></b>
            <% else %>
              <%= message.body.truncate(100) %>
            <% end %>
          </p>
        </div>
      <% end %>
    <% end %>
  </div>
  <% if messages.methods.include? :total_pages%>
    <%= paginate messages %>
  <% end %>
</div>