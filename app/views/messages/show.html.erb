<div class="card my-3 ">
  <div>
    <%= link_to "Reply", new_message_path(:inbox => @last_message.outbox_id, :outbox => @last_message.inbox_id), class: "btn btn-primary" %>
    <% if @last_message.inbox.user.is_patient? %>
      <%= link_to "I've lost my prescription", payment_url(@last_message.inbox.user), class: "btn btn-primary" %>
    <% end %>
  </div>


  <% @messages.each do |message| %>
    <h5 class="card-header">
      <% if message.outbox.user.is_doctor? %>Dr.
      <% end %>
      <%= message.outbox.user.full_name %>
    </h5>
    <div class="card-body">
      <p class="card-text"><%= message.body %></p>
    </div>
  <% end %>
  <%= paginate @messages %>
</div>